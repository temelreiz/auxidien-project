# ============================================
# AUXIDIEN PROJECT - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# BSC Testnet RPC URL
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545

# BSC Mainnet RPC URL (for production)
BSC_MAINNET_RPC=https://bsc-dataseed.binance.org/

# Your wallet private key (without 0x prefix is fine, with 0x also works)
# WARNING: Keep this secret! Never share or commit!
PRIVATE_KEY=your_private_key_here

# BscScan API Key (for contract verification)
# Get it from: https://bscscan.com/myapikey
BSCSCAN_API_KEY=your_bscscan_api_key

# ============================================
# DEPLOYED CONTRACT ADDRESSES
# ============================================
# Fill these after deployment

# AUXI Token address
AUXI_TOKEN_ADDRESS=

# Auxidien Oracle address
AUXIDIEN_ORACLE_ADDRESS=

# Vesting contract address
AUXI_VESTING_ADDRESS=

# ============================================
# BENEFICIARY ADDRESSES (For Vesting)
# ============================================
# Team allocation split across 3 beneficiaries
# Each gets 5,000,000 AUXI

BENEFICIARY_1=0x0000000000000000000000000000000000000001
BENEFICIARY_2=0x0000000000000000000000000000000000000002
BENEFICIARY_3=0x0000000000000000000000000000000000000003

# ============================================
# ALLOCATION ADDRESSES
# ============================================

# Treasury multisig address (20% - 20,000,000 AUXI)
TREASURY_ADDRESS=

# Liquidity pool address (20% - 20,000,000 AUXI)
LIQUIDITY_ADDRESS=

# Public distribution address (35% - 35,000,000 AUXI)
PUBLIC_ADDRESS=

# Strategic/Advisors vesting address (10% - 10,000,000 AUXI)
ADVISORS_ADDRESS=

# ============================================
# ORACLE CONFIGURATION
# ============================================

# Minimum update interval in seconds (default: 300 = 5 minutes)
ORACLE_MIN_UPDATE_INTERVAL=300

# ============================================
# WATCHER CONFIGURATION
# ============================================

# Price update interval in milliseconds (default: 300000 = 5 minutes)
WATCHER_INTERVAL=300000

# RPC URL for watcher
RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
